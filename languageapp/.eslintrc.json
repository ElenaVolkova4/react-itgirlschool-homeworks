{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime", //добавлено, чтобы не было ошибки 'React' must be in scope when using JSX (и можно не импортировать React from 'react')
    "plugin:react-hooks/recommended", //правила для поддержки хуков React
    "plugin:jsx-a11y/recommended", //правила доступности для людей с ограниченными возможностями
    // "plugin:import/recommended", //правила, которые будут отвечать за синтаксис импортов и экспортов
    "prettier"
    // "airbnb" //из-за этого все ломается!!
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "ignorePatterns": ["webpack.config.js"],

  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-console": "off", //чтобы он не ругался, что используется console.log
    "no-var": "error",
    "semi": "error",
    "no-unused-vars": "warn", //если есть неиспользуемые переменные он будет предупреждать, а не выдавать ошибку
    "no-multi-spaces": "error",
    "space-in-parens": "error",
    "no-multiple-empty-lines": "error",
    "prefer-const": "error",
    "no-use-before-define": "error",
    "react/prop-types": 0
  }
}
